---
const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');
---

<footer class="site-footer">
  <div class="container footer-inner">
    <div class="footer-logo">
      <img src={`${base}images/catalyst-logo.svg`} alt="Catalyst logo" class="footer-logo-img" />
    </div>

    <div class="footer-info">
      <div class="footer-col">
        <h4 class="footer-heading">Location</h4>
        <p>Physics Department - PL 101</p>
        <p>Diablo Valley College,</p>
        <p>Pleasant Hill, CA 94523</p>
      </div>

      <div class="footer-col">
        <h4 class="footer-heading">Contact</h4>
        <p><a href="mailto:catalyst@dvc.edu">catalyst@dvc.edu</a></p>
      </div>
    </div>

    <div class="footer-seal">
      <img src={`${base}images/dvc-seal.svg`} alt="DVC seal" class="footer-seal-img" />
    </div>
  </div>
</footer>

<style>
  .site-footer {
    border-top: 1px solid var(--color-border);
    padding: var(--spacing-2xl) 0;
    margin-top: var(--spacing-3xl);
  }

  .footer-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-xl);
  }

  .footer-logo-img {
    width: 64px;
    height: 64px;
  }

  .footer-info {
    display: flex;
    gap: var(--spacing-3xl);
  }

  .footer-heading {
    font-size: var(--font-size-lg);
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
  }

  .footer-col p {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  .footer-col a {
    color: var(--color-text-muted);
  }

  .footer-col a:hover {
    color: var(--color-primary);
  }

  .footer-seal-img {
    width: 72px;
    height: 72px;
  }

  @media (max-width: 768px) {
    .footer-inner {
      flex-direction: column;
      text-align: center;
    }

    .footer-info {
      flex-direction: column;
      gap: var(--spacing-xl);
    }
  }
</style>
