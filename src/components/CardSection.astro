---
const base = import.meta.env.BASE_URL.replace(/\/?$/, '/');

const cards = [
  {
    title: 'Latest Event',
    description: 'Check out our upcoming workshops, guest lectures, and lab sessions designed to expand your STEM horizons.',
    image: `${base}images/placeholder-card.svg`,
    link: `${base}calendar`,
  },
  {
    title: 'Latest Blog',
    description: 'Read about our latest research findings, project updates, and insights from club members.',
    image: `${base}images/placeholder-card.svg`,
    link: `${base}blog`,
  },
  {
    title: 'Contact Us!',
    description: 'Have questions or want to get involved? Reach out and join the Catalyst community today.',
    image: `${base}images/placeholder-card.svg`,
    link: `${base}contact`,
  },
];
---

<section class="cards-section">
  <div class="container">
    <div class="cards-grid">
      {cards.map(card => (
        <a href={card.link} class="card">
          <div class="card-image">
            <img src={card.image} alt={card.title} />
          </div>
          <div class="card-body">
            <h3 class="card-title">{card.title}</h3>
            <p class="card-description">{card.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .cards-section {
    padding: var(--spacing-2xl) 0 var(--spacing-3xl);
  }

  .cards-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
  }

  .card {
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    transition: box-shadow 0.2s ease, transform 0.2s ease;
    display: flex;
    flex-direction: column;
    color: var(--color-text);
  }

  .card:hover {
    box-shadow: var(--shadow-md);
    transform: translateY(-2px);
    color: var(--color-text);
  }

  .card-image img {
    width: 100%;
    aspect-ratio: 16 / 10;
    object-fit: cover;
  }

  .card-body {
    padding: var(--spacing-lg);
    flex: 1;
  }

  .card-title {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-xs);
  }

  .card-description {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .cards-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (min-width: 769px) and (max-width: 1024px) {
    .cards-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>
